/*================ GLOBAL ================*/
/*============================================================================
  #Normalize
  Based on normalize.css v3.0.2 | MIT License | git.io/normalize
==============================================================================*/
*,
*::before,
*::after {
  box-sizing: border-box;
}

body {
  margin: 0;
}

article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
main,
menu,
nav,
section,
summary {
  display: block;
}

body,
input,
textarea,
button,
select {
  -webkit-font-smoothing: antialiased;
  -webkit-text-size-adjust: 100%;
}

a {
  background-color: transparent;
}

b,
strong {
  font-weight: 700;
}

em {
  font-style: italic;
}


small {
  font-size: 80%;
}

sub,
sup {
  font-size: 75%;
  line-height: 0;
  position: relative;
  vertical-align: baseline;
}

sup {
  top: -0.5em;
}

sub {
  bottom: -0.25em;
}

img {
  max-width: 100%;
  border: 0;
}

button,
input,
optgroup,
select,
textarea {
  color: inherit;
  font: inherit;
  margin: 0;
}

button[disabled],
html input[disabled] {  
    cursor: default;
}

button::-moz-focus-inner,
[type="button"]::-moz-focus-inner,
[type="reset"]::-moz-focus-inner,
[type="submit"]::-moz-focus-inner {
  border-style: none;
  padding: 0;
}

button:-moz-focusring,
[type="button"]:-moz-focusring,
[type="reset"]:-moz-focusring,
[type="submit"]:-moz-focusring {
  outline: 1px dotted ButtonText;
}

input[type="search"],
input[type="number"],
input[type="email"],
input[type="password"] {
  -webkit-appearance: none;
  -moz-appearance: none;
}

table {
  width: 100%;
  border-collapse: collapse;
  border-spacing: 0;
}

td,
th {
  padding: 0;
}

textarea {
  overflow: auto;
  -webkit-appearance: none;
  -moz-appearance: none;
}

/*============================================================================
  Fast Tap
  enables no-delay taps (FastClick-esque) on supporting browsers
==============================================================================*/
a,
button,
[role="button"],
input,
label,
select,
textarea {
  touch-action: manipulation;
}

/*================ Custom ================*/

body {
  font-family:  'Futura', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; 
  color: #3D3D38;
  font-size: 16px;
  line-height: 26px;  
  font-weight: 400;
}

// Layout
.wrap {
  padding: 0 2%;
  width: 90%;      
}

@media (min-width: 1000px) {
  .wrap {
    padding: 0 2%;
    width: 90%;      
  }  
  .main {
    width: 57%;
    padding-right: 7%;
  }
  .sidebar {
    width: 43%;
    padding-left: 5%;
  }
  .main__header {
    padding-bottom: 3.4em;
  }
  .express-checkout {
    margin-bottom: -30px;
  }
}

@media (min-width: 750px) {
  .section {
    padding-top: 2.5em;
  }
}

// Inputs Fields
.main .field__input,
.field__input,
input[type="text"], 
input[type="email"], 
input[type="password"], 
input[type="tel"]{
  border-radius: 3px;
  border-color: #EAE8ED;
  font-size: 15px;
  line-height: 26px;
  color:#697071 ;  
  padding: 0.55em 0.9em 0.55em;
  -webkit-appearance: none;
  -moz-appearance: none;
}

.field__input {
  border-radius: 3px;
  font-size: 15px;
  line-height: 26px;
  color:#697071 ;  
  padding: 0.55em 0.9em 0.55em;
  height: 45px;
}

.main .field__input::placeholder,
input::placeholder,
textarea::placeholder{
  color: #B4B9BB;
  opacity: 1;
}

.input-radio:after {
  width: 6px;
  height: 6px;
  margin-left: -3px;
  margin-top: -3px;
}

.floating-labels .main .field__label {
  color: #B4B9BB;
}

@media (max-width: 749px) {
    .review-block__label {
      min-width: 100px;
    }  
}

.review-block__label {
  color: #B4B9BB;
}

.review-block__content {
  color: #697071;
}

.field__message {
  line-height: 1.1em;
  font-size: 14px;
}

.card-fields-container--loaded .field__message--error {
  font-size: 14px;
  max-height: 3em;
}

.radio__label__accessory > span .payment-icon-list__more {
  display: none;
}

.floating-labels .field__label {
  margin: 5px 0 3px;
  font-size: 0.65714em;
  line-height: 13px; 
}

.floating-labels .field--show-floating-label .field__input {
  padding-top: 1em;
  padding-bottom: 0.32714em;
}

.sidebar .field__input {
  font-size: 15px;
  font-weight: 400;  
  border-color: #E9E9E9;
  border-radius: 3px;
}

.sidebar .field__input::placeholder {
  color: #ADB2B3;
}

.card-fields-iframe {
  height: 45px !important;
  font-family: 'Futura', sans-serif;
}

.card-fields-iframe input {
  font-family: 'Futura', sans-serif;
}

.card-fields-container--loaded .field__input--iframe-container {
  padding: 0 5px;
  height: 45px;
  border-color: #E9E9E9;
}

.card-fields-container--loaded .field--show-floating-label .field__input {
  padding-top: 0;
}

.content-box__emphasis {
  font-weight: 400;
  color: #697071;
}

// Headers
h2 {
  color: #24254E;
  font-family: 'Futura', sans-serif;
  font-weight: 400;
  font-size: 18px;
}

.section__title {
  color: #24254E;
  font-family: 'Futura', sans-serif;
  font-weight: 400;
  font-size: 18px;
} 

.layout-flex__item > span {
  color: #697071;
}

.section__header {
  margin-bottom: 0.8em;
}

.checkbox__label {
  color: #697071;
  font-size: 14px;
  line-height: 22px; 
}

.dynamic-checkout__title {
  font-size: 11px;
  text-transform: uppercase;
  color: #B4B9BB !important;
  font-weight: 500;
}

.dynamic-checkout__title::before {
  border-top-left-radius: 3px;
}

.dynamic-checkout__title::after {
  border-top-right-radius: 3px;
}

.alternative-payment-separator::after,
.alternative-payment-separator::before {
  background-color: #EFF2F3;
}

.dynamic-checkout__content {
  border-color: #EAE8ED;
  border-bottom-left-radius: 3px;
  border-bottom-right-radius: 3px;
}

.alternative-payment-separator {
  font-size: 11px;
  color: #B4B9BB;
}

// Breadcrumbs

.breadcrumb__item {
  color: #B4B9BB;
  font-size: 14px;
  line-height: 22px;
}

.breadcrumb__item:first-child {
  display: none;
}

.breadcrumb__item--current {  
  color: #697071;
}

.breadcrumb__item--blank {  
  color: #B4B9BB;
}

.main .icon-svg--color-adaptive-light {
  color: #B4B9BB;
}

// Buttons
@media (max-width: 749px) {
  .btn {      
      padding: 0;
  }
}

.btn {
  width: 300px;
  padding: 10px 26px;
  font-weight: 400;
}

.btn:hover {
  color: white;
  background-color: #E8675E;
}

// Main Content
@media (min-width: 750px) {
  .main__content {
      padding-bottom: 2.6em;
  }
}

.content-box {
  border: 1px #E9E9E9 solid;
  border-radius: 3px;
  color: #697071;
}

.content-box__row {
  padding: 0.9em;
}

.content-box__row:first-child,
.content-box__row:last-child {
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
}

.review-block ~ .review-block {
  padding-top: 0.8em;
}

.review-block__link {
  font-size: 16px;
  font-weight: 400;
}

.section--payment-method .section__header .section__title {
  display: inline-block;
  font-size: 19px;
  color: #24254E;
}

.section--payment-method .section__header .section__text {    
  font-size: 14px;
  color: #697071;
}

@media (min-width: 750px) {
  .section--payment-method .section__header .section__text {
    float: right;
    margin-top: 0;
  }
}

@media (min-width: 420px) {
  .payment-method-wrapper .radio__label,.payment-method-wrapper .radio__label__accessory {
    display: table-cell;     
  }
}

.content-box__row ~ .content-box__row {
  border-top: 1px solid #E9E9E9;
}

.content-box__row--secondary {
  background-color: #FAFBFB;
}

