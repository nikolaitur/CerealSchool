//   display: none;
// }

.step[data-step="contact_information"] .step__footer .step__footer__previous-link {
  display: none;
}


//Sidebar 
.sidebar {
  padding-top: 5em;
}

.sidebar::after {
  box-shadow: none;
}

.sidebar__content .section__title {
  display: none;
}

@media (min-width: 1000px) {
  .sidebar__content .section__title {
    display: block;    
    font-family: 'Futura', sans-serif;
    font-size: 22px;
    margin-top: 20px;
    margin-bottom: 20px;
  }
}

.sidebar .order-summary__emphasis {
  font-size: 17px;
  color: #24254E;
}

.sidebar .order-summary__small-text {
  font-size: 14px;
  color: #879093;
  padding-right: 10px;
}

.product-thumbnail {
  background: none;
}

.product-thumbnail {
  width: 5em;
  height: 5em;
  border-radius: 50%;  
  margin-right: 20px;  
}

.product-thumbnail__wrapper {
  border-radius: 50%;
}

.product-thumbnail::after {
  border: none;
}

.product-thumbnail__quantity {
  background-color: #F26C62;
  top: 0em;
  right: -0.25em;
}

.sidebar .total-line-table__tbody+.total-line-table__footer .total-line th::before,
.sidebar .total-line-table__tbody+.total-line-table__footer .total-line td::before {
  background-color: #E1EAEC;
}

.order-summary__section--product-list::after {
  display: none;
}

.order-summary__sections .order-summary__section:first-child {
  border-top: none;
}

.order-summary__section ~ .order-summary__section {
  border-top: 1px solid #E1EAEC;
}

.order-summary__section {
  padding-top: 1.2em;
  padding-bottom: 1.2em;
}

.total-line__name {
  font-size: 15px;
  color: #879093;
}

.total-line__price .order-summary__emphasis {
  font-size: 15px;
  font-weight: 400;
}

.sidebar .payment-due-label__total,
.sidebar .payment-due__price {
  color: #24254E;
  font-size: 17px;
  font-weight: 500;
}

.payment-due__currency {
  display: none;
}

// Footer
a, .link {
  color: #9C9C9C;
}

.policy-list .policy-list__item:first-child {
  display: none;
}

.policy-list__item a {
  font-size: 14px;
  color: #9C9C9C;
}

.step[data-step="thank-you"] .section:last-child {
  padding-top: 0;
}

.couponCode {
  color: #9C9C9C;
}

// Postscript agreemnet text
.section__content {
  div:last-child {
